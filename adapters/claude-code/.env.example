# Optional Mochat channel for ClaudeClaw
MOCHAT_ENABLED=false
MOCHAT_BASE_URL=http://localhost:11000
MOCHAT_SOCKET_URL=http://localhost:11000
MOCHAT_SOCKET_PATH=/socket.io
MOCHAT_CLAW_TOKEN=claw_xxx
MOCHAT_AGENT_USER_ID=your_agent_user_id

# Targets (JSON array string)
# Use ["*"] for auto discovery
MOCHAT_SESSIONS=["*"]
MOCHAT_PANELS=["*"]

# Reply strategy
# - off: immediate replies
# - non-mention: panel messages not mentioning bot are delayed and batched
MOCHAT_REPLY_DELAY_MODE=non-mention
MOCHAT_REPLY_DELAY_MS=120000
MOCHAT_REQUIRE_MENTION_IN_GROUPS=false

# Advanced socket settings
MOCHAT_SOCKET_DISABLE_MSGPACK=false
MOCHAT_SOCKET_RECONNECT_DELAY_MS=1000
MOCHAT_SOCKET_MAX_RECONNECT_DELAY_MS=10000
MOCHAT_SOCKET_CONNECT_TIMEOUT_MS=10000
MOCHAT_REFRESH_INTERVAL_MS=30000
MOCHAT_WATCH_LIMIT=100
MOCHAT_MAX_RETRY_ATTEMPTS=3

# Optional group-level mention rules
# Example: {"*":{"requireMention":true}}
# MOCHAT_GROUP_RULES={"*":{"requireMention":false}}

# Optional workspace group id used for panel auto-discovery
# MOCHAT_WORKSPACE_GROUP_ID=
